{
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noEmit": true,
      "isolatedModules": true,
      "jsx": "preserve"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }